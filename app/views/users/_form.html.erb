<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field"> 
    <%= f.label t('Email') %><br />
    <%= f.text_field :email %> <small>*will be used for logging in*</small>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.label :logo %>
    <%= f.file_field :logo %><small>*optional*</small>
  </div>
  <div class="field">
    <%= f.label :level %>
    <%= f.select :level, "<option>Ground Floor</option><option>Second Floor</option><option>Third Floor</option><option>Fourth Floor</option>".html_safe, prompt: "Please select level" %>
  </div>
  <div class="field">
    <%= f.label :unit %>
    <%= f.text_field :unit %>
  </div>
  <% if current_user.admin? %>
  <div class="field">
    <%= f.label :admin %><br />
    <%= f.check_box :admin %>
  </div>
  <% end %>
  <div class="actions">
    <%= f.submit "Create account", class: "btn btn-success" %>
  </div>
<% end %>
