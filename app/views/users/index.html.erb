<h1>Account Management</h1>
<table class="table">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Admin</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.admin %></td>
    <td><%= link_to 'Show', user, class: "btn btn-mini btn-info" %></td>
    <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-mini btn-warning" %></td>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-mini btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

<% if current_user.admin? %>
  <%= link_to 'New User', new_user_path, class: "btn btn-success" %>
<% end %>