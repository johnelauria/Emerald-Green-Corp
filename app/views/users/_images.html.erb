<div class="row">
<% @user.images.each do |picture| %>

<div class="span4">
	<%= image_tag(picture.image, size: "200x150") %>
	<div class="btn-group btn-group-vertical">
		<div class="btn-group">
			<a href="#" class="btn btn-mini btn-info">Show</a>
			<%= link_to "Delete", picture, method: :delete, data: { confirm: "Are you sure you want to delete this image?" }, class: "btn btn-mini btn-danger" %>
		</div>
	</div>
</div>
<% end %>
</div>

<br />
<br />

<div id="ImageModal" class="modal hide fade" aria-hidden="true" tabindex="-1">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
		<h3>Add images</h3>
	</div>
	<%= render 'images/form' %>
	<div class="modal-footer">
		<button class="btn btn-mini btn-inverse" data-dismiss="modal" aria-hidden="true">Close</button>
	</div>
</div>
<br /><br />
<a href="#ImageModal" class="btn btn-success" data-toggle="modal">Add photo</a>