<h1>Spaces Available</h1>

<table class="table">
  <tr>
    <th>Main image</th>
    <th>Unit</th>
    <th>Level</th>
    <th>Description</th>
    <% if signed_in? && current_user.admin? %>
    <th></th>
    <% end %>
  </tr>

<% @spaceforleases.each do |spaceforlease| %>
  <tr>
    <td><%= link_to image_tag(spaceforlease.main_image, size: "100x100"), spaceforlease %></td>
    <td><%= spaceforlease.unit %></td>
    <td><%= spaceforlease.level %></td>
    <td><%= truncate(strip_tags(spaceforlease.description), length: 50) %></td>
    <% if signed_in? && current_user.admin? %>
    <td><%= link_to 'Remove', spaceforlease, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-mini btn-danger" %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
