<p id="notice"><%= notice %></p>

<% if @product.image.present? %>
	<%= image_tag(@product.image) %>
<% else %>
	<%= image_tag("no_image.jpg") %>
<% end %>

<p>
  <b>Name:</b>
  <%= @product.name %>
</p>

<p>
  <b>Description:</b>
  <%= @product.description %>
</p>

<p>
	<b>Type: </b>
	<%= @product.product_type %>
</p>

<p>
  <b>Price:</b>
  <%= sprintf("P%0.02f", @product.price) %>
</p>


<%= link_to 'Edit', edit_product_path(@product), class: "btn btn-info" if current_user.id == @product.user_id || current_user.admin? %>
<%= link_to 'Back', :back, class: "btn btn-danger" %>
