<%= form_for(@applicant) do |f| %>
  <% if @applicant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@applicant.errors.count, "error") %> prohibited this applicant from being saved:</h2>

      <ul>
      <% @applicant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <%= f.hidden_field :user_id, value: current_user.id %>

  <div class="field">
    <%= f.label :position %><br />
    <%= f.text_field :position %>
  </div>
  <div class="field">
    <%= f.label :responsibilities %><br />
    <%= f.text_area :responsibilities, rows: 5, placeholder: "Wrap each responsibility inside <li>text here</li> to create a bullet form" %>
  </div>
  <div class="field">
    <%= f.label :requirements %><br />
    <%= f.text_area :requirements, rows: 5, placeholder: "Wrap each requirements inside <li>text here</li> to create a bullet form" %>
  </div>
  <div class="field">
    <%= f.label "Message / Comments" %><small>*optional</small><br />
    <%= f.text_area :message, rows: 6, placeholder: "Write something here like instructions of how applicants should apply..." %>
  </div>
  <div class="field">
    <%= f.label "Check if you wish to accept resumes" %><br />
    <%= f.check_box :accept_resume %>
  </div>
  <div class="actions">
    <%= f.submit "Post", class: "btn btn-success" %>
  </div>
<% end %>
